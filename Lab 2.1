#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <string.h>

struct MyProj
{
	char Liguid[20];
	char Type;
	int Temperature;
	int Speed;
};

int main(void)
{
	system("chcp 1251");
	setlocale(LC_CTYPE, "ukr");
	system("cls");
	char Title[] = { "Швидкість звуку в рідинах" };
	char Comment[] = { "Тип рідини: Ч – чиста речовина, М - масло" };
	struct MyProj Str[] = { {"Анілін", 'Ч', 20, 1656}, {"Ртуть", 'Ч', 20, 1451}, {"Кедрове", 'М', 29, 1406} };

	printf("\n Таблиця до сортування має вигляд \n");
	printf("  ________________________________________________________________ \n");
	printf(" | %-20s\t\t\t\t\t |\n", Title);
	printf(" |_______________________________________________________________| \n");
	printf(" | Рідина     | Тип | Температура (град.С) | Швидкість (м/сек)   |\n");
	printf(" |____________|_____|______________________|_____________________| \n");
	for (int j = 0; j < 3; j++)
	{
		printf(" | %-10s | %c   | %3d                  | %d                |\n", Str[j].Liguid, Str[j].Type, Str[j].Temperature, Str[j].Speed);
		printf(" |____________|_____|______________________|_____________________| \n");
	}
	printf(" | %s                     |\n", Comment);
	printf(" |_______________________________________________________________| \n");

	for (int i = 3 - 1; i >= 0; i--)
	{
		for (int j = 0; j < i; j++)
		{
			struct MyProj tmp;

			if (strcmp(Str[j].Liguid, Str[j + 1].Liguid) > 0)
			{
				tmp = Str[j];
				Str[j] = Str[j + 1];
				Str[j + 1] = tmp;
			}
		}
	}
	printf("\n Таблиця після сортування має вигляд \n");
	printf("  ________________________________________________________________ \n");
	printf(" | %-20s\t\t\t\t\t |\n", Title);
	printf(" |_______________________________________________________________| \n");
	printf(" | Рідина     | Тип | Температура (град.С) | Швидкість (м/сек)   |\n");
	printf(" |____________|_____|______________________|_____________________| \n");
	for (int j = 0; j < 3; j++)
	{
		printf(" | %-10s | %c   | %3d                  | %d                |\n", Str[j].Liguid, Str[j].Type, Str[j].Temperature, Str[j].Speed);
		printf(" |____________|_____|______________________|_____________________| \n");
	}
	printf(" | %s                     |\n", Comment);
	printf(" |_______________________________________________________________| \n");
	return 0;
}


