#define _CRT_SECURE_NO_WARNINGS
#include <stdlib.h>
#include <locale.h>
#include <stdio.h>

int countMultiplesOf10(int numbers[], int n, int product, int index) {
    if (index >= n) {
        if (product % 10 == 0) {
            return 1;
        }
        else {
            return 0;
        }
    }
    else {
        int withNumber = countMultiplesOf10(numbers, n, product * numbers[index], index + 1);
        int withoutNumber = countMultiplesOf10(numbers, n, product, index + 1);
        return withNumber + withoutNumber;
    }
}

