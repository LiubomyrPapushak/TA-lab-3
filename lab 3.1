    scanf("%d", &difference);

    printf("Введіть кількість членів, суму яких потрібно обчислити: ");
    scanf("%d", &n);

    int sum = arithmeticSum(firstTerm, difference, n);
    printf("Сума перших %d членів арифметичної прогресії: %d\n", n, sum);

    return 0;
}
