#define _CRT_SECURE_NO_WARNINGS
#include <stdlib.h>
#include <locale.h>
#include <stdio.h>

int arithmeticSum(int firstTerm, int difference, int n) {
    if (n == 1) {
        return firstTerm;
    }
    else {
        return firstTerm + arithmeticSum(firstTerm + difference, difference, n - 1);
    }
}

